<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlParentLayoutAlert"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingTop="48dp"
    android:paddingEnd="24dp">

    <ImageView
        android:id="@+id/ivStateViewIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_img_no_internet" />

    <TextView
        android:id="@+id/tvStateViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/tvStateViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:textColor="#bbb"
        android:textSize="12sp"
        tools:text="@tools:sample/lorem/random" />

    <Button
        android:id="@+id/btStateViewAction"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:text="Coba Lag"
        tools:text="Coba Lagi" />

</LinearLayout>